<%= render 'shared/navbar-fixed' %>
<% locale = I18n.locale %>

<div class="container" style="margin-top: 120px;">
  <div class="row">

    <div class="col-md-8 col-xs-12">
      <h1><%= eval("@product.name_#{locale}") %></h1>
      <p><%= eval("@product.rich_description_#{locale}") %></p>
    </div>
    <div class="col-md-8 col-xs-12">
      <div><%= eval("@product.quote_#{locale}") %></div>
      <div><%= eval("@product.quote_author_#{locale}") %></div>
    </div>
  </div>
  <div class="row">
    <%= image_tag @product.photo_url, style:"max-width: 100%;" %>
  </div>

  <div class="row">
    <h2 style="margin: auto;">Key take-aways & practicalities</h2>
  </div>
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <%= eval("@product.practicality_1_#{locale}") %>
    </div>
    <div class="col-md-6 col-xs-12">
      <%= eval("@product.practicality_2_#{locale}") %>
    </div>
    <div class="col-md-6 col-xs-12">
      <%= eval("@product.practicality_3_#{locale}") %>
    </div>
    <div class="col-md-6 col-xs-12">
      <%= eval("@product.practicality_4_#{locale}") %>
    </div>
    <div class="col-md-6 col-xs-12">
      <%= eval("@product.practicality_5_#{locale}") %>
    </div>
    <div class="col-md-6 col-xs-12">
      <%= eval("@product.practicality_6_#{locale}") %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4  text-center">
      <div>Target Group</div>
      <div><%= eval("@product.target_group_#{locale}") %></div>
    </div>
    <div class="col-md-4 text-center">
      <div>Format</div>
      <div><%= eval("@product.format_#{locale}") %></div>
    </div>
    <div class="col-md-4 text-center">
      <div>Languages</div>
      <div><%= eval("@product.languages_#{locale}") %></div>
    </div>

  </div>
</div>
