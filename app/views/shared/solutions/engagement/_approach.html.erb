<!-- Spotlight -->
  <section class="spotlight style5 orient-center content-align-left image-position-center onscroll-image-fade-in color8">
    <div id="content-selector" class="content engagement-approach-box  d-none">
      <ul style="list-style: none;" class="selector-box">
        <li class="engagement-selector-one engagement-selector active"><i class="engagement-selector-bubble engagement-selector-bubble-one fas fa-circle"></i><h3><%= t('solutions.engagement.approach.header_one') %></h3></li>
        <li class="engagement-selector-two engagement-selector"><i class="engagement-selector-bubble engagement-selector-bubble-two far fa-circle"></i><h3><%= t('solutions.engagement.approach.header_two') %></h3></li>
        <% if I18n.locale == :en || :fr %>
          <li class="engagement-selector-three engagement-selector"><i class="engagement-selector-bubble engagement-selector-bubble-three far fa-circle"></i><h3><%= t('solutions.engagement.approach.header_three') %></h3></li>
        <% end %>
      </ul>
    </div>
    <div class="content small-font approaches">
      <div class="engagement-approach-flex-box">
        <div class="engagement-approach engagement-approach-one active onscroll-content-fade-in d-none">
          <h2><%= t('solutions.engagement.approach.header_one') %></h2>
          <div>
            <p class="align-justify"><%= t('solutions.engagement.approach.content_one') %></p>
          </div>
        </div>
        <div class="engagement-approach engagement-approach-two onscroll-content-fade-in">
          <h2>A comprehensive approach</h2>
          <div>
            <ul>
              <li><p class="engagement-small-margin align-justify">
                <strong style="color:#48E27C;">Super hands-on</strong><br>
                You put all insights into practice and go beyond knowing to doing.
              </p></li>
              <li><p class="engagement-small-margin align-justify">
                <strong style="color:#48E27C;">Access to experienced coaches</strong><br>
                You are able to go deep into your topic and have access to a sparring partner who challenges you to grow.
              </p></li>
              <li><p class="engagement-small-margin align-justify">
                <strong style="color:#48E27C;">Personalised</strong><br>
                We keep these groups small so you are able to work on your unique needs without getting lost in the group.
              </p></li>
              <li><p class="engagement-small-margin align-justify">
                <strong style="color:#48E27C;">Future-proof</strong><br>
                You receive methodologies and frameworks which will continue to support you once we are gone.
              </p></li>
            </ul>
          </div>
        </div>
        <% if I18n.locale == :en || :fr %>
          <div class="engagement-approach engagement-approach-three onscroll-content-fade-in" style="display: none;">
            <h2><%= t('solutions.engagement.approach.header_three') %></h2>
            <div>
              <p class="align-justify"><%= t('solutions.engagement.approach.content_three') %></p>
            </div>
            <ul>
              <li><%= t('solutions.engagement.approach.content_three_a') %></li>
              <li><%= t('solutions.engagement.approach.content_three_b') %></li>
              <li><%= t('solutions.engagement.approach.content_three_c') %></li>
              <li><%= t('solutions.engagement.approach.content_three_d') %></li>
              <li><%= t('solutions.engagement.approach.content_three_e') %></li>
            </ul>
          </div>
        <% end %>
      </div>
      <div>
        <ul class="mobile-content-selector" style="list-style: none;">
          <li class="engagement-mobile-selector engagement-mobile-selector-one active"><i class="far fa-circle"></i></li>
          <li class="engagement-mobile-selector engagement-mobile-selector-two"><i class="far fa-circle"></i></li>
          <% if I18n.locale == :en || :fr %>
            <li class="engagement-mobile-selector engagement-mobile-selector-three"><i class="far fa-circle"></i></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="image approach-background">
      <%#= image_tag("https://res.cloudinary.com/dr7ypsdyf/image/upload/v1561639312/Atolo-39.jpg", :alt => "image", :class => "approach-background") %>
      <%= image_tag("https://res.cloudinary.com/dr7ypsdyf/image/upload/v1561649294/engagement04.jpg", :alt => "image", :class => "approach-background") %>
    </div>
  </section>
