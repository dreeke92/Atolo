<%= render 'shared/new_navbar' %>
<% locale = I18n.locale %>
<div  class="wrapper banner-title" style="background-image: url(<%= image_url 'bg_summerclass_2024.jpg' %>)">
  <div class="title-group">
    <div>
      <%= Title.find_by_unique_key("summer_class_header_title_1")&.translate(locale) %>
    </div>
    <h1>
      <%= Title.find_by_unique_key("summer_class_header_title_2")&.translate(locale) %>
    </h1>
    <div>
      <%= Title.find_by_unique_key("summer_class_header_title_3")&.translate(locale) %>
    </div>
    <div class="dates">
      <div>
        <%= Title.find_by_unique_key("summer_class_header_date_1")&.translate(locale) %>
      </div>
      <%= image_tag "icons/green-arrow.svg" %>
      <div>
         <%= Title.find_by_unique_key("summer_class_header_date_2")&.translate(locale) %>
      </div>
    </div>
  </div>

  <a href="#products" class="regular"><span> <%= Title.find_by_unique_key("summer_class_header_cta")&.translate(locale) %><%= image_tag 'icons/arrow-down-circle.svg' %></span></a>
</div>
<div class="container">
  <div class="concept">
    <div style="font-size:16px;">
      <%= Title.find_by_unique_key("summer_class_section_1_title_1")&.translate(locale) %>
    </div>
    <h2 style="font-size:32px;"><%= Title.find_by_unique_key("summer_class_section_1_title_2")&.translate(locale) %></h2>
    <div class="concept_text" style="font-size:18px;">
      <%= Title.find_by_unique_key("summer_class_section_1_title_3")&.translate(locale) %>
    </div>
  </div>
  <div class="events" id="products">
    <% @products_1.each do |product| %>
      <div class="event large">
        <div style="background-image: url(<%= product.photo_url %>)" class="bg-image">
        </div>
        <div class="subtitle">
          <%= eval("product.subtitle_#{locale}") %>
        </div>
        <div class="title title-pink">
          <%= eval("product.name_#{locale}") %>
        </div>
        <div class="description">
          <%= eval("product.summer_rich_description_1_#{locale}") %>
        </div>
        <% cta = eval("product.cta_#{locale}") %>
        <%= link_to product_path(product.id), class:"cta pink-cta" do %>
          <span> <%= cta.nil? ? "More info" : cta %> <%= image_tag 'icons/arrow-right-circle-2.svg' %></span>
        <% end %>
      </div>
    <% end %>
    <% @products_2.each do |product| %>
      <div class="event large">
        <div style="background-image: url(<%= product.photo_url %>)" class="bg-image">
        </div>
        <div class="subtitle">
          <%= eval("product.subtitle_#{locale}") %>
        </div>
        <div class="title">
          <%= eval("product.name_#{locale}") %>
        </div>
        <div class="description">
          <%= eval("product.rich_description_#{locale}") %>
        </div>
        <% cta = eval("product.cta_#{locale}") %>
        <%= link_to product_path(product.id), class:"cta" do %>
          <span> <%= cta.nil? ? "More info" : cta %> <%= image_tag 'icons/arrow-right-circle-2.svg' %></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="section-2">
  <h2 style="font-size:32px;"><%= Title.find_by_unique_key("summer_class_section_2_title_1")&.translate(locale) %></h2>
  <div style="font-size:18px;margin-bottom:18px;">
    <%= Title.find_by_unique_key("summer_class_section_2_title_2")&.translate(locale) %>
  </div>

  <div class="concept_text" style="font-size:18px;">
    <%= Title.find_by_unique_key("summer_class_section_2_title_3")&.translate(locale) %>
  </div>
</div>
<section id="discount" class="spotlight style1 orient-left content-align-left image-position-center onscroll-image-fade-in onload-content-fade-right">
  <div class="content">
    <div style="font-size:16px;"><%= Title.find_by_unique_key("summer_class_discount_title_1")&.translate(locale) %></div>
    <h2 style="font-size:40px; color:white;"><%= Title.find_by_unique_key("summer_class_discount_title_2")&.translate(locale) %></h2>
    <div style="font-size:18px;"><%= Title.find_by_unique_key("summer_class_discount_title_3")&.translate(locale) %></div>
  </div>
  <div class="image">

    <%= image_tag("summer_discount.jpg", :alt => "image") %>
  </div>
</section>

<!-- Items -->
<section id="testimonials" class="wrapper style1 align-center">
  <div class="inner">
    <h3><%= Title.find_by_unique_key("summer_class_testimonial_title")&.translate(locale) %></h3>
    <div class="owl-carousel owl-theme testimonial-cards onload-fade-in card-carousel">
      <% Testimonial.where(category:"summer_class").each do |testimonial| %>
        <section class="testimonial-card">
          <p class="small-font"><%= eval("testimonial.content_#{locale}") %></p>
          <div class="testimonial-footer">
            <h3><%= testimonial.author %></h3>
            <h4><%= testimonial.company_name %></h4>
          </div>
        </section>
      <% end %>
    </div>
  </div>
</section>
