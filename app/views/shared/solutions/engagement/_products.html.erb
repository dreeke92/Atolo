<!-- Gallery -->
  <section class="wrapper style1 align-center">
    <div class="inner">
      <h2>Our products in engagement</h2>
    </div>

    <!-- Gallery -->
      <div class="gallery style2 small lightbox onscroll-fade-in">
        <% @communication_products. each do |product| %>

          <article>
            <a href="#" data-featherlight="#mylightbox-<%= product.id %>" class="image">
              <%= cl_image_tag product.photo, crop: :fill, :alt => "image", :class => "product-image" %>
            </a>
            <div class="caption">
              <h3><%= product.name %></h3>
            </div>
          </article>



        <% end %>
      </div>
      <div class="inner"></div>
  </section>

<!-- Hidden section -->

<div hidden>
  <% @communication_products. each do |product| %>
    <div id="mylightbox-<%= product.id %>" class="product-card">
      <!-- <div class="col-lg-12 col-md-12"> -->
        <div class="categorie-item">
          <div class="ci-thumb">
            <%= cl_image_tag product.photo, crop: :fill, :class => "product-image" %>
          </div>
          <div class="ci-text">
            <h3><%= product.name %></h3>
            <p><%= product.description %></p>
          </div>
        </div>
      <!-- </div> -->
    </div>
  <% end %>
</div>
