<!-- Gallery -->
  <section id="products" class="wrapper style1 align-center">
    <div class="inner">
      <h2><%= t('solutions.communication.products.title') %></h2>
    </div>

    <!-- Gallery -->
      <div id="product-gallery" class="gallery style2 large lightbox onscroll-fade-in">
        <% @communication_products. each do |product| %>

          <article>
            <a href="#" data-featherlight="#mylightbox-<%= product.id %>" class="image products data-gallery">
              <%= cl_image_tag product.photo, crop: :fill, :alt => "image", :class => "product-image" %>
            </a>
            <div class="caption">
              <h2><%= product.name %></h2>
            </div>
          </article>

        <% end %>
      </div>
      <div class="inner"></div>
  </section>

<!-- Hidden section -->

<div hidden>
  <% @communication_products. each do |product| %>
    <div id="mylightbox-<%= product.id %>" class="product-card">
      <div class="categorie-item">
        <div class="ci-thumb">
          <%= cl_image_tag product.photo, crop: :fill, :class => "product-image" %>
        </div>
        <div class="product-card-content small-font align-center">
          <div class="ci-text">
            <div>
              <h3><%= product.name %></h3>
              <p class="product-card-content-margin"><%= product.description %></p>
            </div>
            <div class="align-center">
              <button id="get-in-touch" class="small product-card-button next-product-card" ><%= t('solutions.engagement.products.request') %></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
