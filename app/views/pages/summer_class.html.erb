<%= render 'shared/navbar-fixed' %>
<% locale = I18n.locale %>
<div  class="wrapper banner-title" style="background-image: url(<%= image_url 'bg_summerclass.jpg' %>)">
  <h1>
    <%= t ('summer_class.title') %>
  </h1>
  <div class="dates">
    <div>
      <%= t ('summer_class.start_on') %>
    </div>
    <%= image_tag "icons/green-arrow.svg" %>
    <div>
       <%= t ('summer_class.end_on') %>
    </div>
  </div>
  <div class="subtitle">
    <%= t ('summer_class.sub_title') %>
  </div>
  <a href="#products" class="regular"><span> <%= t('summer_class.discover') %> <%= image_tag 'icons/arrow-down-circle.svg' %></span></a>
</div>
<div class="container">
  <div class="concept">
    <h2><%= t ('summer_class.concept') %></h2>
    <div class="concept_text"><%= t ('summer_class.concept_text_html') %></div>
  </div>
  <div class="events" id="products">
    <% @products_1.each do |product| %>
      <div class="event large">
        <div style="background-image: url(<%= product.photo_url %>)" class="bg-image">
        </div>
        <div class="subtitle">
          <%= eval("product.subtitle_#{locale}") %>
        </div>
        <div class="title title-pink">
          <%= eval("product.name_#{locale}") %>
        </div>
        <div class="description">
          <%= eval("product.rich_description_#{locale}") %>
        </div>
        <% cta = eval("product.cta_#{locale}") %>
        <%= link_to product_path(product.id), class:"cta pink-cta" do %>
          <span> <%= cta.nil? ? "More info" : cta %> <%= image_tag 'icons/arrow-right-circle-2.svg' %></span>
        <% end %>
      </div>
    <% end %>
    <% @products_2.each do |product| %>
      <div class="event large">
        <div style="background-image: url(<%= product.photo_url %>)" class="bg-image">
        </div>
        <div class="subtitle">
          <%= eval("product.subtitle_#{locale}") %>
        </div>
        <div class="title">
          <%= eval("product.name_#{locale}") %>
        </div>
        <div class="description">
          <%= eval("product.rich_description_#{locale}") %>
        </div>
        <% cta = eval("product.cta_#{locale}") %>
        <%= link_to product_path(product.id), class:"cta" do %>
          <span> <%= cta.nil? ? "More info" : cta %> <%= image_tag 'icons/arrow-right-circle-2.svg' %></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

