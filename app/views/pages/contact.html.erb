<div id="contact">
  <div id="wrapper" class="divided">
    <%= render 'shared/new_navbar' %>
    <section id="main-contact-form" >
      <div class="content main-contact-form-container">
        <%= render 'shared/contact-form' %>
      </div>
      <div class="informations">
        <h2><%= Title.find_by_unique_key("contact_title")&.translate(locale) %></h2>
        <div class="description">
          <%= Title.find_by_unique_key("contact_description")&.translate(locale) %>
        </div>
        <div class="network-link">
          <a class ="icon" href="https://www.linkedin.com/company/atolo/" target="_blank"><%= Title.find_by_unique_key("follow_us")&.translate(locale) %> <i class="fab fa-linkedin-in"></i></a>
        </div>

        <h3><%= Title.find_by_unique_key("contact_give_us_a_call")&.translate(locale) %></h3>
        <div class="row">
          <div class="col-sm-6">
            <%= Title.find_by_unique_key("atolo_belgium")&.translate(locale) %>
          </div>
          <div class="col-sm-6">
            <%= Title.find_by_unique_key("atolo_belgium_phone")&.translate(locale) %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <%= Title.find_by_unique_key("atolo_switzerland")&.translate(locale) %>
          </div>
          <div class="col-sm-6">
            <div>
              <%= Title.find_by_unique_key("atolo_switzerland_phone_1")&.translate(locale) %>
            </div>
            <div>
              <%= Title.find_by_unique_key("atolo_switzerland_phone_2")&.translate(locale) %>
            </div>
          </div>
        </div>
        <h3><%= Title.find_by_unique_key("contact_find_us_here")&.translate(locale) %></h3>
        <div class="row">
          <div class="col-sm-6">
            <%= Title.find_by_unique_key("atolo_belgium")&.translate(locale) %>
          </div>
          <div class="col-sm-6">
            <div>
              <%= Title.find_by_unique_key("atolo_belgium_address_1")&.translate(locale) %>
            </div>
            <div>
              <%= Title.find_by_unique_key("atolo_belgium_address_2")&.translate(locale) %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <%= Title.find_by_unique_key("atolo_switzerland")&.translate(locale) %>
          </div>
          <div class="col-sm-6">
            <div>
              <%= Title.find_by_unique_key("atolo_switzerland_address_1")&.translate(locale) %>
            </div>
            <div>
              <%= Title.find_by_unique_key("atolo_switzerland_address_2")&.translate(locale) %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
